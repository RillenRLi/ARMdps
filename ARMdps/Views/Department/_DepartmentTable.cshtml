@model List<ARMdps.Models.DepartmentModel>
@{
}
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="~/ru.json" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<div id="modalDialog" class="modal fade">
    <div id="dialogContent" class="modal-dialog"></div>
</div>
<div>
    <button class="blue-button" onclick="addNewDepartment">Новое подразделение</button>
</div>
<table id="dTable" class="cell-border" style="width:100%">
    <thead style="background-color:#75BCFF;">
        <tr>
            <th>Код подразделения</th>
            <th>Название подразделения</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in Model)
        {
            <tr ondblclick="clickDepartmentEditBtn(@d.Id)">
                <td>
                    @Html.HiddenFor(i => d.Id)
                    @d.DepartmentCode
                </td>
                <td>@d.DepartmentName</td>
            </tr>
        }
    </tbody>
</table>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/jquery.dataTables.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script type="text/javascript">

    function clickDepartmentEditBtn(deparmentId) {
        //alert(deparmentId);
        $.ajax({
            type: "POST",
            data: ({ id: deparmentId }),
            url: '@Url.Action("GetDepartmenEditForm", "Department")',
            success: function (data) {
                $("#dialogContent").html(data);
                $("#modalDialog").modal("show");
            },
            error: function () {
                alert('Error occured');
            }
        });
    }

    $(document).ready(function () {
    $('#dTable').DataTable();
    })
</script>
